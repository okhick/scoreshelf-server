{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "modules/assets/@types/*",
        "modules/sharetribe/@types/*"
      ],
      "error/*": ["modules/error/*"],
      "assets/*": ["modules/assets/*"],
      "auth/*": ["modules/auth/*"],
      "publisher/*": ["modules/publisher/*"],
      "sharetribe/*": ["modules/sharetribe/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}